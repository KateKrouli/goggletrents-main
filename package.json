{
  "name": "news-mosaic",
  "version": "1.0.0",
  "description": "Популярные запросы и новости с изображениями",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "watch:scss": "sass --watch src/scss/main.scss:dist/styles.css --style=expanded",
    "watch:js": "esbuild --bundle src/js/main.js --outfile=dist/main.js --watch",
    "watch:lang": "esbuild --bundle src/js/lang.js --outfile=dist/lang.js --watch",
    "watch:html": "node watch-html.js",
    "serve": "live-server dist --port=5000 --watch=dist",
    "copy:images": "mkdir -p dist/images && (cp -r src/images/* dist/images/ 2>/dev/null || true)",
    "copy:components": "cp -r src/components dist/components",
    "copy:server": "cp server.js dist/server.js",
    "watch:server": "chokidar 'src/server.js' -c 'npm run copy:server'",
    "build": "esbuild src/js/main.js --bundle --outfile=dist/main.js && esbuild src/js/lang.js --bundle --outfile=dist/lang.js && npx posthtml src/index.html -o dist/index.html && cp -r src/scss dist/scss && npm run copy:images && npm run copy:components",
    "dev": "nodemon server.js",
    "watch:images": "chokidar 'src/images/**/*' -c 'npm run copy:images'",
    "dev:all": "npm-run-all --parallel dev watch:scss watch:js watch:lang watch:html watch:images watch:server"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "express": "^4.18.2",
    "google-trends-api": "^4.9.2",
    "node-telegram-bot-api": "^0.66.0",
    "swiper": "^11.2.10"
  },
  "devDependencies": {
    "chokidar": "^3.5.3",
    "chokidar-cli": "^3.0.0",
    "esbuild": "^0.18.0",
    "live-server": "^1.2.2",
    "nodemon": "^3.1.10",
    "npm-run-all": "^4.1.5",
    "posthtml": "^0.16.6",
    "posthtml-cli": "^0.10.0",
    "posthtml-include": "^1.7.4",
    "sass": "^1.75.0"
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}